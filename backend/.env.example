# Application Settings
APP_NAME=Quorum
APP_VERSION=1.0.0
DEBUG=False

# Database
DB_NAME=quorum.duckdb
DB_MEMORY=False
DB_THREADS=4
DB_MAX_MEMORY=4GB

# API Settings
API_HOST=127.0.0.1
API_PORT=8000
API_RELOAD=False
API_WORKERS=1

# AI Engine
AI_ANOMALY_THRESHOLD=0.95
AI_CONTAMINATION=0.01
AI_RANDOM_SEED=42
AI_N_JOBS=-1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=quorum.log

# Security (SOUP)
SOUP_PUBLIC_KEY=public_key.pem
SOUP_SIGNATURE_ALGORITHM=RSA-PSS
SOUP_HASH_ALGORITHM=SHA256

# Performance
BATCH_SIZE=10000
MAX_WORKERS=4
CHUNK_SIZE=1000

# MITRE ATT&CK
MITRE_VERSION=14.1
MITRE_FRAMEWORK=enterprise-attack